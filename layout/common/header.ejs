<header id="header">
    <% var companySocial = theme.profile.company.social; %>
    <% var socialLinks = theme.social.links; %>

    <div id="banner" />
    <div id="header-outer" class="outer">
        <div id="header-title" class="inner">
            <h1 id="title-wrap">
                <a href="<%- url_for() %>" id="title"><%= config.title %></a>
            </h1>

            <% if (config.subtitle){ %>
            <h2 id="subtitle-wrap">
                <a href="<%- url_for() %>" id="subtitle"><%= config.subtitle %></a>
            </h2>
            <% } %>

            <% if(theme.logo.enabled && theme.logo) { %>
            <div id="logo-wrap">
                <img id="logo" src="<%- url_for(theme.logo.url) %>" />
            </div>
            <% } %>
        </div>

        <div id="header-inner" class="inner">
            <nav id="main-nav">
                <a id="main-nav-toggle" class="nav-icon"></a>
                <% for (var i in theme.menu){ %>
                <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%- i %></a>
                <% } %>
            </nav>

            <nav id="sub-nav">
                <% if(companySocial) { %>
                <% var tooltipClass = theme.social.tooltip === false ? '' : 'class=tooltip'; %>

                <% for(var i in companySocial) { %>
                <% if (companySocial[i]) { %>
                <a id="nav-<%= i %>-link" class="nav-icon" href="<%- url_for(socialLinks[i] + companySocial[i]) %>" target="_blank" title="<%= i %>" <%= tooltipClass %>></a>
                <% } %>
                <% } %>
                <% } %>


                <% var rss_path = config.feed.path %>

                <% if (rss_path){ %>
                <a id="nav-rss-link" class="nav-icon" href="<%- rss_path %>" title="rss"></a>
                <% } %>

                <a id="nav-search-btn" class="nav-icon" title="search"></a>
            </nav>

            <div id="search-form-wrap">
                <%- search_form({button: '&#xF002;'}) %>
            </div>
        </div>
    </div>
</header>